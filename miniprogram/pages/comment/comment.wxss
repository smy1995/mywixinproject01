/* pages/comment/comment.wxss */
/*1：电影背景图片，虚化效果*/
.detail-container{
  height: 400rpx;/*图片高度*/
  filter:blur(40rpx);/*模糊滤镜*/
  opacity: .9; /*透明度*/
  }
  /*2：电影背景遮罩层，显示电影背景底层*/
  .detail-mask{
    position: absolute;
    width:100%;
    height:400rpx;
    background:#333;
    top:0;
    left:0;
    z-index:-1;
  }
  /*3:电影详细信息*/
  .detail-info{
    position: absolute;
    display:flex;
    top:0;
    left:0;
    width:100%;
    height:400rpx;
    padding:20rpx;
  }
  /*4:左侧大图*/
  .detail-img{
    width:280rpx;
    height:90%;
    margin-right:24rpx;
  }
  /*5:右侧区域*/
  .detail{
     flex:1;
     line-height:60rpx;
     color:#fff;
     font-size:24rpx;
  }
  /*6.评分样式*/
  .detail-sc{
    color:#fc0;
    font-size:36rpx;
  }
  /*7.电影描述*/
  .desc{
    padding:20rpx;
    font-size:24rpx;
    color:#222;
  }
  /*图片预览*/
  .view{
    display: flex;
    justify-content: space-around
  }
  .view-img{
    width: 150rpx;
    height: 150rpx;
  }